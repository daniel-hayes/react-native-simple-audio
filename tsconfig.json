{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "jsx": "react-native",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}