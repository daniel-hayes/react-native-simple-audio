    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.22",
    "@types/react-native": "^0.60.22",
    "jest": "^24.9.0",
    "react": "^16.11.0",
    "react-native": "^0.61.4",
    "react-test-renderer": "^16.11.0",
    "ts-jest": "^24.1.0",
